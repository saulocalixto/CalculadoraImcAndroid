<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="2dp">

    <StackView
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:background="#689f38"
        android:id="@+id/stackView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageButton
        android:text="Voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:src="@drawable/back"
        android:onClick="voltar"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toTopOf="@+id/stackView"
        app:layout_constraintBottom_toBottomOf="@+id/stackView"
        app:layout_constraintVertical_bias="0.8" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="171dp"
        android:src="@drawable/saudavel"
        android:id="@+id/logoSaude"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/stackView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:text="RelatÃ³rio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:gravity="center_horizontal"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textColor="#ffffff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/stackView"
        app:layout_constraintBottom_toTopOf="@+id/logoSaude"
        android:layout_marginBottom="8dp" />

    <TextView
        android:text="IMC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imc"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/logoSaude"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintVertical_bias="0.31" />

    <TextView
        android:text="Peso Ideal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pesoIdeal"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imc"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintVertical_bias="0.41000003" />

</android.support.constraint.ConstraintLayout>

</ScrollView>